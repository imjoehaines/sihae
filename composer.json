{
    "require": {
        "slim/slim": "^3.5",
        "monolog/monolog": "^1.21",
        "psr/log": "^1.0",
        "container-interop/container-interop": "^1.1",
        "danielstjules/stringy": "^2.3",
        "league/commonmark": "^0.15.0",
        "doctrine/orm": "^2.5",
        "nesbot/carbon": "^1.21",
        "slim/flash": "^0.2.0",
        "i-am-tom/schemer": "^2.0",
        "akrabat/rka-slim-session-middleware": "^2.0",
        "slim/csrf": "^0.8.1",
        "vlucas/phpdotenv": "^2.4",
        "league/plates": "^3.1",
        "doctrine/migrations": "^1.4",
        "jdorn/sql-formatter": "^1.2"
    },
    "require-dev": {
        "behat/behat": "^3.2",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "tracy/tracy": "^2.4",
        "macfja/tracy-doctrine-sql": "@dev",
        "phpunit/phpunit": "^6.0",
        "kubawerlos/types-checker": "^1.1",
        "phpstan/phpstan": "^0.6.3"
    },
    "autoload": {
        "psr-4": {
            "Sihae\\": "src/",
            "Sihae\\Migrations\\": "migrations/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sihae\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "composer test:unit && composer test:acceptance && composer test:phpstan && composer test:types",
        "test:acceptance": "behat --colors -v",
        "test:unit": "phpunit tests/Unit/",
        "test:phpstan": "phpstan analyse src tests --level 4",
        "test:types": "types-checker src tests"
    }
}
