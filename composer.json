{
    "autoload": {
        "psr-4": {
            "Sihae\\": "src/",
            "Sihae\\Migrations\\": "migrations/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sihae\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "require": {
        "akrabat/rka-slim-session-middleware": "^2.0",
        "container-interop/container-interop": "^1.1",
        "danielstjules/stringy": "^3.1",
        "doctrine/common": "^2.10",
        "doctrine/migrations": "^1.4",
        "doctrine/orm": "^2.6.3",
        "jdorn/sql-formatter": "^1.2",
        "league/commonmark": "^0.18",
        "league/plates": "^3.1",
        "monolog/monolog": "^1.21",
        "psr/log": "^1.0",
        "slim/csrf": "^0.8.1",
        "slim/flash": "^0.4",
        "slim/slim": "^3.5",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "behat/behat": "3.5.0",
        "behat/mink-extension": "2.3.1",
        "behat/mink-goutte-driver": "1.2.1",
        "kubawerlos/types-checker": "1.1.3",
        "macfja/tracy-doctrine-sql": "@dev",
        "tracy/tracy": "2.5.5",
        "phpstan/phpstan": "0.11",
        "phpstan/phpstan-doctrine": "0.10.0",
        "phpunit/phpunit": "7.5.1",
        "phpstan/phpstan-deprecation-rules": "0.10.2",
        "phpstan/phpstan-strict-rules": "0.10.1"
    },
    "scripts": {
        "test": "composer test:unit && composer test:acceptance && composer test:phpstan && composer test:types",
        "test:acceptance": "behat --colors -v",
        "test:phpstan": "phpstan analyse src tests",
        "test:types": "types-checker src tests",
        "test:unit": "phpunit tests/Unit/"
    }
}
