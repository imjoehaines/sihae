{
    "autoload": {
        "psr-4": {
            "Sihae\\": "src/",
            "Sihae\\Migrations\\": "migrations/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sihae\\Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "7.3"
        }
    },
    "require": {
        "php": "^7.3",
        "akrabat/rka-slim-session-middleware": "^2.0",
        "doctrine/migrations": "^2.0.0",
        "doctrine/orm": "^2.6.3",
        "jdorn/sql-formatter": "^1.2",
        "league/commonmark": "^1.0.0",
        "league/plates": "^3.1",
        "monolog/monolog": "^2.0.0",
        "psr/log": "^1.0",
        "slim/csrf": "^1.0.0",
        "slim/flash": "^0.4",
        "slim/slim": "^3.5",
        "vlucas/phpdotenv": "^4.1",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "behat/behat": "3.5.0",
        "behat/mink-extension": "2.3.1",
        "behat/mink-goutte-driver": "1.2.1",
        "kubawerlos/types-checker": "1.2.0",
        "macfja/tracy-doctrine-sql": "@dev",
        "tracy/tracy": "2.7.2",
        "phpstan/phpstan": "0.12.8",
        "phpstan/phpstan-doctrine": "0.12.9",
        "phpunit/phpunit": "8.5.2",
        "phpstan/phpstan-deprecation-rules": "0.12.2",
        "phpstan/phpstan-strict-rules": "0.12.2"
    },
    "scripts": {
        "test": [
            "composer test:unit",
            "composer test:acceptance",
            "composer test:phpstan",
            "composer test:types"
        ],
        "test:acceptance": "behat --colors -v",
        "test:phpstan": "phpstan analyse src tests",
        "test:types": "types-checker src tests --exclude Sihae\\\\Utils\\\\Safe --exclude Sihae\\\\Tests\\\\Unit\\\\Utils\\\\SafeTest",
        "test:unit": "phpunit tests/Unit/ --testdox --color=always"
    }
}
